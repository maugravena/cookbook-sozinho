<!DOCTYPE html>
<html>
  <head>
    <title>CookbookSozinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Sair', destroy_user_session_path %>
    <% else %>
      <%= link_to 'Entrar', new_user_registration_path %>
    <% end %>

    <%= flash[:notice] %>
    <%= form_with url: recipes_path, method: 'get' do %>
      <%= label_tag :q, 'Buscar receita:' %>
      <%= text_field_tag :q %>
      <%= submit_tag 'Pesquisar' %>
    <% end %>
    <%= yield %>
  </body>
</html>
